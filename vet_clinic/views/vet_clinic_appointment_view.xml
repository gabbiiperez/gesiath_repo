<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="vet_clinic_appointment_view_form" model="ir.ui.view">
        <field name="name">vet.clinic.appointment.view.form</field>
        <field name="model">vet.clinic.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="pet_id"/>
                        <field name="appointment_date"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="vet_clinic_appointment_view_tree" model="ir.ui.view">
        <field name="name">vet.clinic.appointment.view.tree</field>
        <field name="model">vet.clinic.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="pet_id"/>
                <field name="appointment_date"/>
            </tree>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_library_ca7" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.library_ca7</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='integration']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box" id="library_ca7_config">
                    <div class="o_setting_left_pane" />
                    <div class="o_setting_right_pane" name="library_ca7_config_right_pane">
                        <div style="font-weight: 500;">
                            Library CA7 data
                        </div>
                        <div class="content-group">
                            <div class="mt16 row">
                                <label
                                    for="api_url"
                                    string="API URL"
                                    class="col-xs-3 col-md-3 o_light_label"
                                />
                                <field
                                    name="api_url"
                                    nolabel="1"
                                    force-save="1"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>           
        </field>
    </record>
</odoo>
